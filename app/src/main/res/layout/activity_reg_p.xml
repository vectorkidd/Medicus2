<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vector.medicus1.RegP"
    android:background="@drawable/logoc">




        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="43dp"
            android:hint="Please Fill in your details"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/fullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20sp"
            android:ems="10"
            android:hint="Full Name"
            android:inputType="textPersonName" />


        <EditText
            android:id="@+id/dob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/fullname"
            android:layout_below="@+id/fullname"
            android:ems="10"
            android:hint="Age"
            android:inputType="date" />

        <EditText
            android:id="@+id/gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/dob"
            android:layout_below="@+id/dob"
            android:ems="10"
            android:hint="Gender"
            android:inputType="text" />


        <EditText
            android:id="@+id/bgroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gender"
            android:layout_alignStart="@+id/gender"
            android:ems="10"
            android:hint="Blood Group"
            android:inputType="text" />

        <EditText
            android:id="@+id/mobno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/bgroup"
            android:layout_below="@+id/bgroup"
            android:ems="10"
            android:hint="Mobile Number"
            android:inputType="phone" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mobno"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="Submit" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/mobno"
            android:layout_below="@+id/button2"
            android:layout_marginStart="13dp"
            android:layout_marginTop="25dp"
            android:text="Already a member?" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView3"
            android:layout_toEndOf="@+id/textView3"
            android:text="Click Here"
            android:textColor="#FF00" />


</RelativeLayout>
