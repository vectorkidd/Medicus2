<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vector.medicus1.Offhelp">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_marginBottom="12dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/doc"
        />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Personal Guide!"
                android:layout_gravity="center"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="@string/offlinehlp" />
            <TextView
                android:id="@+id/Enumb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="Emergency Numbers"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/amb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Call Ambulance"
                android:textStyle="bold"
                android:textSize="15sp" />

            <Button
                android:id="@+id/ambnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/amb"
                android:text="102"
                android:textAlignment="textStart"
                android:textColor="#000" />

            <TextView
                android:id="@+id/fire"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Call Fire Station"
                android:textStyle="bold"
                android:textSize="15sp" />
            <Button
                android:id="@+id/firenum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/amb"
                android:text="101"
                android:textAlignment="textStart"
                android:textColor="#000" />

            <TextView
                android:id="@+id/childhelp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Child Helpline"
                android:textStyle="bold"
                android:textSize="15sp" />
            <Button
                android:id="@+id/childnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/amb"
                android:text="1098"
                android:textAlignment="textStart"
                android:textColor="#000" />

            <TextView
                android:id="@+id/bldreq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blood Requirement"
                android:textStyle="bold"
                android:textSize="15sp" />
            <Button
                android:id="@+id/bldre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/amb"
                android:text="104"
                android:textAlignment="textStart"
                android:textColor="#000" />

            <TextView
                android:id="@+id/whelp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Women Helpline"
                android:textStyle="bold"
                android:textSize="15sp" />
            <Button
                android:id="@+id/whelpline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/amb"
                android:text="181"
                android:textAlignment="textStart"
                android:textColor="#000" />



        </LinearLayout>
    </ScrollView>

</RelativeLayout>
